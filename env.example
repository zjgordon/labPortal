# Database
DATABASE_URL="file:./dev.db"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Admin Access
ADMIN_PASSWORD="your-admin-password"

# Portal Configuration
PUBLIC_BASE_URL="http://localhost:3000"

# Public API Access (Grafana/Readers)
READONLY_PUBLIC_TOKEN="your-public-readonly-token-here"

# Local Action Execution (Systemctl)
HOST_LOCAL_ID="local"
ALLOW_SYSTEMCTL="false"
UNIT_ALLOWLIST_REGEX="^([a-z0-9@._-]+)\\.service$"
EXEC_TIMEOUT_MS="60000"

# Admin Cron/Prune Management (Server Secret)
ADMIN_CRON_SECRET="your-server-secret-here"
