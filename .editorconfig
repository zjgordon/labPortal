# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Package files
[package.json]
indent_size = 2

# Prisma schema
[*.prisma]
indent_size = 2

# Shell scripts
[*.sh]
end_of_line = lf
indent_size = 2

# Docker files
[Dockerfile*]
end_of_line = lf
indent_size = 2
